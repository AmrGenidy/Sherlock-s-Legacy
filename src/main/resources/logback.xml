<configuration debug="false">

    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />
    <!-- Appender to write to the console -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- This format is for DEVELOPER VIEW ONLY during testing -->
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Appender to write to a log file -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>sherlocks_legacy.log</file> <!-- The log file name -->
        <append>false</append> <!-- Overwrite log on each new run -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 
      This is the root logger configuration.
      By default, log messages of level INFO and higher will go to the FILE appender.
      During development, you can uncomment the STDOUT appender to see logs in the console.
    -->
    <root level="INFO">
        <appender-ref ref="FILE" />
        <!-- <appender-ref ref="STDOUT" /> -->
    </root>

</configuration>