<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.FinalExamViewController">
    <top>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
            <Label fx:id="titleLabel" text="Final Exam" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
            <Label fx:id="progressLabel" text="Question 1 of 1"/>
        </VBox>
    </top>
    <center>
        <VBox fx:id="questionPane" alignment="CENTER" spacing="20" style="-fx-padding: 20;">
            <Label fx:id="questionPromptLabel" text="Question prompt goes here." wrapText="true"/>
            <HBox alignment="CENTER" spacing="20">
                <ComboBox fx:id="slot1ComboBox" promptText="Select choice for slot 1"/>
                <ComboBox fx:id="slot2ComboBox" promptText="Select choice for slot 2"/>
            </HBox>
        </VBox>
    </center>
    <bottom>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="previousButton" text="Previous"/>
                <Button fx:id="nextButton" text="Next"/>
            </HBox>
            <Button fx:id="submitButton" text="Submit Exam"/>
        </VBox>
    </bottom>
    <right>
        <ScrollPane fx:id="resultScrollPane" fitToWidth="true" visible="false">
            <VBox fx:id="resultVBox" spacing="10" style="-fx-padding: 10;"/>
        </ScrollPane>
    </right>
</BorderPane>
